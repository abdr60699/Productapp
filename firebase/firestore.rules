rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // HELPER FUNCTIONS
    // ============================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isShopOwner(shopId) {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/shops/$(shopId)).data.ownerId == request.auth.uid;
    }

    function isShopMember(shopId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/shops/$(shopId)/members/$(request.auth.uid));
    }

    function hasShopAccess(shopId) {
      return isShopOwner(shopId) || isShopMember(shopId);
    }

    function isAdmin() {
      return isAuthenticated() &&
        getUserData().role == 'admin';
    }

    function userBelongsToShop(shopId) {
      return isAuthenticated() &&
        getUserData().shopId == shopId;
    }

    // ============================================
    // USERS COLLECTION
    // ============================================

    match /users/{userId} {
      // Users can read their own data
      allow read: if isAuthenticated() && request.auth.uid == userId;

      // Users can create their own profile on signup
      allow create: if isAuthenticated() &&
        request.auth.uid == userId &&
        request.resource.data.keys().hasAll(['email', 'displayName', 'createdAt']);

      // Users can update their own profile
      allow update: if isAuthenticated() &&
        request.auth.uid == userId &&
        // Prevent users from changing critical fields
        request.resource.data.email == resource.data.email &&
        request.resource.data.role == resource.data.role;

      // Only admins can delete users
      allow delete: if isAdmin();
    }

    // ============================================
    // SHOPS COLLECTION
    // ============================================

    match /shops/{shopId} {
      // Anyone can read shop data (for public storefront)
      allow read: if true;

      // Authenticated users can create shops
      allow create: if isAuthenticated() &&
        request.resource.data.ownerId == request.auth.uid &&
        request.resource.data.keys().hasAll(['name', 'slug', 'ownerId', 'createdAt']) &&
        // Ensure slug is unique (checked by Cloud Function)
        request.resource.data.isActive == true;

      // Only shop owners can update their shops
      allow update: if isShopOwner(shopId) &&
        // Prevent changing owner
        request.resource.data.ownerId == resource.data.ownerId;

      // Only shop owners can delete (soft delete via update)
      allow delete: if isShopOwner(shopId);

      // ============================================
      // SHOP MEMBERS SUBCOLLECTION
      // ============================================

      match /members/{memberId} {
        allow read: if hasShopAccess(shopId);
        allow write: if isShopOwner(shopId);
      }

      // ============================================
      // TEMPLATES SUBCOLLECTION
      // ============================================

      match /templates/{templateId} {
        // Shop members can read templates
        allow read: if hasShopAccess(shopId);

        // Shop members can create templates
        allow create: if hasShopAccess(shopId) &&
          request.resource.data.shopId == shopId &&
          request.resource.data.keys().hasAll(['name', 'fields', 'createdAt']);

        // Shop members can update templates
        allow update: if hasShopAccess(shopId) &&
          request.resource.data.shopId == resource.data.shopId;

        // Shop members can delete templates
        allow delete: if hasShopAccess(shopId);
      }

      // ============================================
      // PRODUCTS SUBCOLLECTION
      // ============================================

      match /products/{productId} {
        // Anyone can read published products (public storefront)
        allow read: if resource.data.isActive == true || hasShopAccess(shopId);

        // Shop members can create products
        allow create: if hasShopAccess(shopId) &&
          request.resource.data.shopId == shopId &&
          request.resource.data.keys().hasAll(['title', 'templateId', 'createdAt']);

        // Shop members can update products
        allow update: if hasShopAccess(shopId) &&
          request.resource.data.shopId == resource.data.shopId;

        // Shop members can delete products
        allow delete: if hasShopAccess(shopId);
      }

      // ============================================
      // CARD PRESETS SUBCOLLECTION
      // ============================================

      match /card_presets/{presetId} {
        allow read: if hasShopAccess(shopId);
        allow write: if hasShopAccess(shopId);
      }

      // ============================================
      // ANALYTICS SUBCOLLECTION
      // ============================================

      match /analytics/{document=**} {
        // Shop members can read analytics
        allow read: if hasShopAccess(shopId);

        // Only Cloud Functions can write analytics
        allow write: if false;
      }

      // ============================================
      // LEADS SUBCOLLECTION
      // ============================================

      match /leads/{leadId} {
        // Shop members can read leads
        allow read: if hasShopAccess(shopId);

        // Anyone can create leads (public enquiries)
        allow create: if request.resource.data.shopId == shopId &&
          request.resource.data.keys().hasAll(['productId', 'type', 'createdAt']);

        // Shop members can update leads (change status)
        allow update: if hasShopAccess(shopId);

        // Shop members can delete leads
        allow delete: if hasShopAccess(shopId);
      }
    }

    // ============================================
    // PUBLIC TEMPLATES COLLECTION
    // ============================================

    match /templates_public/{templateId} {
      // Anyone can read public templates
      allow read: if true;

      // Only admins can write public templates
      allow write: if isAdmin();
    }

    // ============================================
    // GLOBAL SETTINGS (Admin only)
    // ============================================

    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
